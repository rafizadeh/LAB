@model Client
@{
    ViewData["Title"] = "MailSend";
}

<h2>eMail sending</h2>

<form method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" type="text" name="Name" />
            </div>
            <div class="form-group">
                <label>Surname</label>
                <input asp-for="Surname" class="form-control" type="text" name="Surname" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" type="text" name="Email" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Subject</label>
                <input asp-for="Subject" class="form-control" type="text" name="Subject" />
            </div>
            <div class="form-group">
                <label>CC</label>
                <input asp-for="CC" class="form-control" type="text" name="CC" />
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea asp-for="Message" class="form-control" type="text" name="Message"></textarea>
            </div>
        </div>
            <button class="btn btn-dark" type="submit">Send email</button>
    </div>
    
</form>

