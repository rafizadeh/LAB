@model PreViewImport.Models.Doctor
@{
    ViewBag.Title = "Details";
}

<!-- Page Title -->
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7">
                <h2>Doctor</h2>
            </div>

            <div class="col-md-6 col-lg-5">
                <ul>
                    <li><a href=@Url.Action("Index","Home")>Home</a></li>
                    <li>Doctor</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->
<!-- Doctors Details section -->
<section class="doctors-details ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="doctors-details">
                    <div class="img">
                        <img src="~/Public/assets/img/doctors/@Model.Photo" alt="department-details">
                    </div>

                    <div class="doctors-desc">
                        <h3>@Model.Fullname</h3>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <div class="doctors-sidebar">
                    <div class="doctors-info">
                        <h4>Profile Details</h4>
                        <ul>
                            <li>Phone: <span>@Model.PhoneNumber</span></li>
                            <li>Email: <span><a href="www.gmail.com">@Model.Email</a></span></li>
                            <li>Speciality: <span>@Model.Speciality</span></li>
                            <li>Degree: <span>@Model.Degree</span></li>
                            <li>Expert in: <span>@Model.ExpertIn</span></li>
                            <li>Categories: <span><a href="#">@Model.Department.Name</a></span></li>
                        </ul>
                    </div>

                    <div class="doctors-social">
                        <ul>
                            <li><a href="@Model.Facebook"><i class="icofont-facebook"></i></a></li>
                            <li><a href="@Model.Twitter"><i class="icofont-twitter"></i></a></li>
                            <li><a href="@Model.Linkedin"><i class="icofont-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Doctors Details section -->
<!-- Call To Action -->
<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="call-to-action-text">
                    <i class="icofont-first-aid"></i>
                    <h3>Health Care Center</h3>
                    <p>if you have any Emerangcy by health problem contact this <span>No. 035 687 9514</span> or contact form</p>
                </div>
            </div>

            <div class="col-lg-3">
                <a href="#" class="default-btn">Contact Us</a>
            </div>
        </div>
    </div>
</section>
<!-- End Call To Action -->